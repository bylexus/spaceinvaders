{
    "name": "spaceinvaders",
    "version": "0.0.1",
    "description": "A Space Invaders clone for the web",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "docker": "docker run --rm -ti -v $(pwd):/src -p 9000:9000 spaceinvaders bash",
        "watch": "NODE_ENV=development webpack -d -w",
        "serve": "NODE_ENV=development webpack-dev-server"
    },
    "keywords": [
        "space",
        "invaders"
    ],
    "author": "Alexander Schenkel <alex@alexi.ch>",
    "license": "MIT",
    "dependencies": {
        "phaser": "^3.23.0"
    },
    "devDependencies": {
        "css-loader": "^3.5.3",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.3.0",
        "prettier": "^2.0.5",
        "style-loader": "^1.2.1",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "prettier",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 9,
            "sourceType": "module",
            "ecmaFeatures": {}
        },
        "env": {
            "node": true,
            "es6": true
        },
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "tabWidth": 4,
                    "printWidth": 120
                }
            ],
            "no-unused-vars": [
                "error",
                {
                    "vars": "all",
                    "args": "none"
                }
            ],
            "semi": [
                "error",
                "always"
            ],
            "curly": "error",
            "eqeqeq": "error",
            "no-eval": "error",
            "no-loop-func": "error",
            "radix": "error",
            "no-undef": "error"
        }
    }
}
